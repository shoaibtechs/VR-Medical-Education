GridBackground {
    --grid-background-color: #2b2b2b;
    --line-color: rgba(51, 51, 51, 0.4);
    --thick-line-color: rgba(61, 61, 61, 1);
    --spacing: 25;
}

.mages-graph-editor {
    justify-content: space-between;
    flex-grow: 1;
}

.mages-graph {
}

.mages-graph > .node {
    background-color: rgb(26, 26, 26);
    padding: 8px;
    border-radius: 16px;
    border-color: rgb(170, 170, 170);
}

.mages-node > #node-border > #contents > #top > #input {
    background-color: rgb(30, 30, 30);
}

.mages-node > #node-border > #contents > #top > #output {
    background-color: rgb(30, 30, 30);
}

.mages-node-extension-container {
    background-color: rgb(26, 26, 26);
    padding: 8px;
}

.mages-node-action-data {
    width: 400px;
}

.mages-node-action-data > .unity-disabled {
    display: none;
}

.mages-node > #node-border > #contents > #top > #divider {
    display: none;
}


.mages-node > #selection-border {
    border-color: rgba(255, 255, 255, 0.0);
}

.mages-node:hover > #selection-border {
    border-color: rgba(255, 255, 255, 0.5);
    transition: border-color 0.2s ease-in-out;
}

.mages-node:selected > #selection-border {
    border-left-color: rgba(255, 255, 255, 0.7);
    border-right-color: rgba(255, 255, 255, 0.7);
    border-top-color: rgba(255, 255, 255, 0.7);
    border-bottom-color: rgba(255, 255, 255, 0.7);
}

.mages-node:hover:selected > #selection-border {
    border-left-color: rgb(255, 255, 255);
    border-right-color: rgb(255, 255, 255);
    border-top-color: rgb(255, 255, 255);
    border-bottom-color: rgb(255, 255, 255);
}

.mages-node-begin > #node-border {
    border-top-color: rgb(255, 0, 0);
    border-top-width: 2px;
}

.mages-node > #node-border > #title {
    background-color: rgb(26, 26, 26);
}

.mages-node > #node-border > #contents > #divider {
    border-color: rgb(0, 0, 0);
    border-top-width: 2px;
    background-color: rgb(0, 0, 0);
}

.mages-graph-editor > .unity-toolbar {
    background-color: rgba(0, 0, 0, 0.95);
    flex-wrap: nowrap;
    min-height: 32px;
    padding: 4px;
    flex-grow: 0;
    justify-content: space-between;
    align-items: center;
}

ToolbarSearchField {
    flex-shrink: 6;
    min-width: 0;
}

.mages-graph-editor > .unity-toolbar > .unity-button {
    border-radius: 4px;
}

.mages-graph-editor {
    display: flex;
    flex-direction: column;
}

.mages-node > #node-border > #title {
    justify-content: flex-start;
}

.mages-node > #node-border > #title > #title-label {
    flex-grow: 1;
}

.mages-graph-error-list {
    flex-grow: 0;
    flex-shrink: 0;
    align-self: auto;
    margin: 8px;
    min-height: 128px;
    padding-left: 32px;
    padding-right: 32px;
    background-color: rgba(0, 0, 0, 0.9);
}

